import java.util.Scanner; 


public class Calculator
{
    static void addition(int a,int b)
    {
        int c;
        c=a+b;
        
        System.out.println("Addition :- "+c);
        
    }
    static void subtraction(int a,int b)
    {
        
        int c;
        c=b-a;
         System.out.println("Subtraction :-"+c);
        
    }
    static void multiplication(int a,int b)
    {
        int c;
        c=a*b;
         System.out.println("Multiplication :-"+c);
        
        
        
    }
    
    static void division(int a,int b)
    {
        int c;
        c=b/a;
        
         Systemout.println("Division :-"+c);
    }
    
   static void Square(int a)
   {
       
       int c;
       c=a*a;
       Systemout.println("Square :-"+c);
       
       
   }
   static void Squareroot(int d)
   {
       
       
       int c;
       c =d/2;
       Systemout.println("Squareroot :-"+c);
       
       
   }
    
    
    
    
    
    public static void main(String[]args)
    {
        
        
        int a,b,c,d;
        a=1;
        b=2;
        c=3;
        d=4;
         System.out.println("Enter correct Number");
        System.out.println("1-Addition\n 2-Subtraction\n 3-Multiplication\n 4-Division\n 5-Square\n 6-Squareroot");
        Scanner in=new Scanner(System.in);
        int operation;
        operation = in.nextInt();
         System.out.println(operation);
         int op=operation;
             if(op==1)
             {
                addition(a,b);
                 
             }
               
             else if(op==2)
                {
                    subtraction(b,a);
                    
                }
                else if(op==3)
                {
                     multiplication(a,b);
                    
            }
        else if(op==4)
        {
            division(a,b);
        }
        else if(op==5)
        {
            Square(a);
        }
        else if(op==6)
        {
            Squareroot(d);
        }
        else
        {
            System.out.println("You have entered incorrect number");
            
        }
    }
}
